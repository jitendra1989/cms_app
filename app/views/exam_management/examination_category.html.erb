<% navigation_add t('examination_category'), :controller=>'exam_management', :action=>'examination_category' %>
<%=render partial: 'exam_management_left'%>
<h4 class="mg-h4"><%= t('examination_category_list') %></h4>

<button class="new-add-examination-category mg-btn-bottom-margin mg-custom-form-btn"><%= t('add_examination_category')%></button>

<div class="mg_pagination">
<%if @examination_category.present?%>
<table  class="batch-tbl mg-tbl-margin">   <!-- border="2" --> 
  <tr class="subject-table-header">
    <th><%= t('name') %></th>
    <th><%= t('description') %></th>
    <th style="width: 92px;"><%= t('actions') %></th>
  </tr>
 
  <% @examination_category.each do |s| %>
    <tr>
      <td><%= s.name %></td>
      <td class="mg-desc-text-justify"><%= truncate(s.description.to_s, :length => 25, :separator => ' ') %></td>
      <td>
      	
      <button title="Show" id="<%=raw s.id %>-showExamCategoryBTNID" class="show-examination-category-btn mg-icon-btn"><i class="fa fa-eye"></i></button>

        <button title="Edit" id="<%=raw s.id %>-editExamCategoryBTNID" class="edit-examination-category-btn mg-icon-btn"><i class="fa fa-pencil-square-o"></i></button>

        <button title="Delete" id="<%=raw s.id %>-deleteExamCategoryBTNID" class="delete-examination-category-btn mg-icon-btn"><i class="fa fa-trash"></i></button>

      </td>
    </tr>
  <% end %>
</table>
<br/>
 <div class="pagination-align" style="position: relative; bottom: 10px;">
              <%= will_paginate @examination_category, :container => false %>
           </div>
<%else%>
<h5>No examination category is created </h5>
<%end%>
</div>

<div id="showExaminationCategoryDIVID"></div>
<div id="editExaminationCategoryDIVID"></div>
<div id="newExaminationCategoryDIVID"></div>

<%= render  partial: 'application/common_left_close' %>

<script>
$(document).ready(function () {
	focusCurrentTab("viewExaminationCategoryAID","viewExaminationCategoryLiID");
});
</script>