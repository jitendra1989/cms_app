<%= form_for :ExamsGroups, :url=>{:controller=>'examination',:action=>'exammanagement_examGroupsCreate'},:html => {:id => 'ExamsGroupsCategoryNewFormId', :class => 'elm_class',:style => 'elm_style' } do |f| %>

