<div class="mg-custom-labels">
<%= form_for @elective_group,:html => {
                            :id => 'electiveGroupFormID' } do |f| %>
<%= f.hidden_field :is_deleted, :value => 0 %>
<%= f.hidden_field :mg_school_id, :value => session[:current_user_school_id] %>
<%= f.hidden_field :created_by, :value => session[:user_id] %>
<%= f.hidden_field :updated_by, :value => session[:user_id] %>
<p>
    <label class="mg-label" style="width:140px"><%= t('name') %><span class="required-field">&nbsp;*</span></label>
    <br/>
   <%= f.text_field :name,:class=>"mg-text-field" %>
</p>

<p>
    <label class="mg-label " for="elective_type"><%= t('select')%> <%= t('elective_type')%><span class="required-field">&nbsp;*</span></label><br>
    <%=f.collection_select(:mg_elective_type_id,MgElectiveType.where(:is_deleted=>0,:mg_school_id=>session[:current_user_school_id]),:id ,:name,{:include_blank=>t("select")},:class => "subject-wing-new-class mg-select-btn")%>
</p>

<p>
    <label class="mg-label " for="max_weekly_class"><%= t('max_weekly_class') %><span class="required-field">&nbsp;*</span></label><br>
    <%= f.text_field :max_weekly_class ,:class=>"mg-text-field" %>
  </p>


<p>
    <label class="mg-label" style="width:140px"><%= t('description') %></label>
    <br/>
   <%= f.text_area :description,:class=>"mg-text-field" %>
</p>


<p class="mg-p-mgtop">
    <a onclick="$(this).closest('form').submit()" class="mg-small-form-btn"><%=t("save")%></a>
    <!-- <%#= f.submit t('save') ,:class=>"mg-small-form-btn"%> -->
    <%#= link_to t('cancel'), :back, {:class=>"mg-small-form-btn cancel-form-dialog"} %>
    <a class="mg-small-form-btn cancel-form-dialog"><%=t('cancel')%></a>
</p>
<% end %>
</div>
