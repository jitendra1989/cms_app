$("#curriculumemployeecurriculumupdateID").validate({

rules: {
"curriculum[mg_timetable_id]": {required: true},
"curriculum[mg_wing_id]": {required: true},
"mg_course_id": {required: true},
"mg_subject_id": {required: true},
